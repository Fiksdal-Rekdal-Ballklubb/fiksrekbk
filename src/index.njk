          <img src="{{ post.bilde }}" alt="Bilde til {{ post.title }}" />
        {% endif %}
        <h2><a href="/nytt/{{ post.slug }}/">{{ post.title }}</a></h2>
        <p><em>{{ post.dato }}</em></p>
        <p>{{ post.ingress }}</p>
