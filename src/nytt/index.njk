layout: layouts/base.njk
title: Nyheiter
---

<h1>Nyheiter</h1>

{% for post in nyheter %}
  <article>
    {% if post.bilde %}
      <img src="{{ post.bilde }}" alt="Bilde til {{ post.tittel }}" style="max-width: 100%; height: auto;" />
    {% endif %}
    <h2><a href="/nytt/{{ post.slug }}/">{{ post.tittel }}</a></h2>
    <p><em>{{ post.dato }}</em></p>
    <p>{{ post.ingress }}</p>
  </article>
{% endfor %}
